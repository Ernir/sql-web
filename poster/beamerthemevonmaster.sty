% Style file created by Eiríkur Ernir Þorsteinsson. 2017.
% Based on a conference poster style by Anna Helga Jónsdóttir

\ProvidesPackage{beamerthemevonmaster}

\selectcolormodel{cmyk}

\definecolor{orange}{rgb}{0.92549, 0.43922, 0.14902} % Approximation of the SENS orange color

\setbeamerfont{title in headline}{size=\Huge}
\setbeamerfont{author in headline}{size=\Large, shape=\itshape}
\setbeamerfont{date in headline}{size=\large, series=\bfseries}
\setbeamercolor{block title}{fg=black,bg=white}
\setbeamerfont{block title}{size=\large, series=\bfseries}
\setbeamerfont{subblock title}{size=\large}
\setbeamercolor{caption name}{fg=black}
\setbeamertemplate{caption}[numbered]
\addtobeamertemplate{block begin}{\vspace{1cm}}{\justifying \vspace{0.5cm}}

\newenvironment<>{subblock}[1]{%
  \begin{block}{\mdseries #1}
}
{
  \end{block}
}

\addtobeamertemplate{frame begin}{}{bg=black}

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

% Emulation of a standard HÍ header
\setbeamertemplate{headline}{  
  \leavevmode
  \includegraphics[width=\textwidth]{figs/hi-poster-header}
  \begin{columns}{t}
  \begin{column}{.25\textwidth}
    \includegraphics[width=\linewidth]{hi-logo-vertical}
  \end{column}
  \begin{column}{.5\textwidth}
  \begin{beamercolorbox}[center]{}
    \usebeamerfont{title in headline} 
    \inserttitle
  \end{beamercolorbox}
  \begin{beamercolorbox}[center]{}
    \usebeamerfont{author in headline}

    \vspace{0.3cm}
    \insertauthor

    \vspace{0.3cm}
    Leiðbeinandi: \insertinstructor
  \end{beamercolorbox}

  \vspace{1cm}
  \begin{beamercolorbox}[center]{}
    \usebeamerfont{date in headline} 
    \insertdate
  \end{beamercolorbox}
  \end{column}
  \begin{column}{.25\textwidth}
    % This is where a partner's logo can be inserted
  \end{column}
  \end{columns}
  
}

%Removal of the footer, which isn't used in this version
\setbeamertemplate{footline}{}